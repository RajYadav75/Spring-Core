<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean class="org.example.Address" id="addId">
        <constructor-arg value="15"/>
        <constructor-arg value="273403"/>
        <constructor-arg value="Gorakhpur"/>
    </bean>
    <bean class="org.example.Student" id="stdId">
        <constructor-arg value="Raj Yadav"/>
        <constructor-arg value="07"/>
        <constructor-arg ref="addId"/>
    </bean>

</beans>